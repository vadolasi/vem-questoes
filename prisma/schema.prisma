generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  name          String
  password      String
  role          Role   @default(USER)
  refreshTokens RefreshToken[]
}

model Alternative {
  id         String   @id @default(cuid())
  letter     String
  correct    Boolean
  question   Question @relation(fields: [questionId], references: [id])
  questionId String
}

model Question {
  id           String @id @default(cuid())
  enunciado    String
  alternatives Alternative[]
}

model RefreshToken {
  id        String  @id @default(cuid())
  createdAt DateTime
  revoked   Boolean @default(false)
  expiresAt DateTime
  user      User    @relation(fields: [userId], references: [id])
  userId    String
}
